# INSANYCK Environment Variables
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =====================================
# REQUIRED - Core Application
# =====================================

# Database - PostgreSQL connection string
DATABASE_URL="postgresql://user:password@localhost:5432/insanyck"

# NextAuth - Authentication service
NEXTAUTH_URL="http://localhost:3000"  # Must match NEXT_PUBLIC_URL in production
NEXTAUTH_SECRET="your-32-char-secret-key-here-change-this"  # Use: openssl rand -base64 32

# Application URLs - Must be coherent
NEXT_PUBLIC_URL="http://localhost:3000"  # Client-side accessible URL

# =====================================
# REQUIRED - Stripe Integration (Etapa 11)
# =====================================

# Stripe Keys (get from https://dashboard.stripe.com/test/apikeys)
STRIPE_PUBLISHABLE_KEY="pk_test_51xxxxxxxxxxxxxxx"  # Client-side safe
STRIPE_SECRET_KEY="sk_test_51xxxxxxxxxxxxxxx"       # Server-only, keep secure!

# Stripe Webhook (get from https://dashboard.stripe.com/test/webhooks)
STRIPE_WEBHOOK_SECRET="whsec_xxxxxxxxxxxxxxx"       # For /api/stripe/webhook

# Stripe API Version - Pin to avoid breaking changes
STRIPE_API_VERSION="2025-07-30.basil"               # Default, can customize

# =====================================
# OPTIONAL - Additional Services
# =====================================

# Environment
NODE_ENV="development"  # development | production | test

# MongoDB (if needed)
# MONGODB_URI="mongodb://localhost:27017/insanyck"

# Email Service (optional)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-password"

# OpenAI (optional)
# OPENAI_API_KEY="sk-xxxxxxxxxxxxxxx"

# INSANYCK STEP 4 · Lote 4 — env dev local (placeholders)
BACKEND_DISABLED=
INSANYCK_TEST_HIDE_UPDATE_BANNER=

# =====================================
# PRODUCTION NOTES
# =====================================
# 1. Update NEXTAUTH_URL and NEXT_PUBLIC_URL to your domain
# 2. Generate secure NEXTAUTH_SECRET: openssl rand -base64 32
# 3. Use Stripe production keys (pk_live_* and sk_live_*)
# 4. Configure webhook endpoint: https://yourdomain.com/api/stripe/webhook
# 5. Ensure DATABASE_URL points to production database